<launch>
	<arg name="mic_name"         default="alsa_input.usb-M-Audio_Producer_USB-00-USB.analog-stereo" />
    <node 
        name="recognizer" pkg="bender_speech" type="recognizer_ros" ns="/bender/speech"
        respawn="false" output="screen">
        <param name="mic_name" value="$(arg mic_name)"/>
        <rosparam file="$(find bender_speech)/config/recognizer.yaml" command="load"/>
		

    </node>

</launch>
